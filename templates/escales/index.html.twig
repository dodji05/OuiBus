    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEscale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for escale in escales %}
            <tr>
                <td>{{ escale.id }}</td>
                <td>{{ escale.NomEscale }}</td>
                <td>
